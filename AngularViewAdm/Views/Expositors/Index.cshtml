@model IEnumerable<AngularViewAdm.Models.Expositor>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de expositores</h1>

<p>
    <a asp-action="Create">Agregar nuevo expositor</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Negocio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                CAJA
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <th>
                @Html.DisplayNameFor(modelItem => item.Negocio)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => item.Celular)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.DetalleCaja)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
